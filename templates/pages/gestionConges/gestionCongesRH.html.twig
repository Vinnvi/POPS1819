{% extends 'topBar.html.twig' %}
{% block title %} Gestion conges RH {% endblock %}
{% block body %}
    <div class="row">
        <div class="col s6 m6 l6">
            <ul class="collection with-header">
                <li class="collection-header"><h5>Demandes en attente</h5></li>
                {% if demandesEnAttente == null %}
                    <li class="collection-item">
                        Il n'y a aucune demande en attente pour le moment
                    </li>
                {% else  %}
                    {% for demande in demandesEnAttente %}
                        <li class="collection-item">
                            <a href="{{ path('demande.details',{id: demande.id_conge}) }}">
                                <ul class="collapsible">
                                    <li>
                                        <div class="collapsible-header" style="display: block">
                                            <div class="right">
                                                <img class="responsive-img"  height="50" width="50" src="{{ demande.collabo.profile_pic_path }}"/>
                                            </div>
                                            {{ demande.collabo.prenom }} {{ demande.collabo.nom }} - Service : {{ demande.collabo.service.nom }} <br>
                                            {{ demande.type }} <br>
                                            {{ demande.date_debut|date('d/m/Y') }} - {{ demande.date_fin|date('d/m/Y') }}

                                        </div>
                                    </li>
                                </ul>
                            </a>
                        </li>
                    {% endfor %}
                {% endif %}
            </ul>
        </div>
        <div class="col s6 m6 l6">
            <ul class="collection with-header">
                <li class="collection-header"><h5>Historique des demandes</h5></li>
                {% if congesPassees == null %}
                    <li class="collection-item">
                        Historique vide
                    </li>
                {% else %}
                    {% for conge in congesPassees %}
                        <li class="collection-item">
                            Cong√©s de {{ conge.collabo.nom }} {{ conge.collabo.prenom }} ({{ conge.collabo.service.nom }}) du {{ conge.date_debut|date('d/m/Y') }} au {{ conge.date_fin|date('d/m/Y') }} <br>
                            Decision : {{ conge.statut }} <br>
                            {% if conge.statut == status[5] %}
                                Motif : {% if conge.commentaire == null %} Il n'y a aucun motif {% else %} {{ conge.commentaire }} {% endif %}
                            {% endif %}
                        </li>
                    {% endfor %}
                {% endif %}
            </ul>
        </div>
    </div>

{% endblock %}

{% block javascripts %}
{% endblock %}
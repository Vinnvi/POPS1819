{% extends 'topBar.html.twig' %}

{% block title %}Gestion demandes d'avance {% endblock %}
{% block body %}
    <div class="row">
        <div class="col s10 m10 ll0 push-l1 push-s1 push-m1">
            <ul class="collection with-header">
                <li class="collection-header">
                    <h4>Demande d'avance de {{ demande.collabo.nom }} {{ demande.collabo.prenom }}</h4><br>
                    Date de la demande : {{ demande.lastModif|date("d/m/Y") }} <br>
                    Montant demandé : {{ demande.montant }} euros<br>
                    Motif invoqué : {{ demande.motif }}<br>
                </li>
                {% for ligne in demande.lignes %}
                <li class="collection-item">
                    {{ ligne.mission }} {{ ligne.intitule }} <br>
                    Montant estimé : {{ ligne.montant }}<br>
                    Montant demandé : {{ ligne.montantAvance }} <br>
                    Date d'ajout de la ligne : {{ ligne.date|date("d/m/Y") }}<br>
                    Projet rattaché : {{ ligne.projet.nom }}
                </li>
                {% endfor %}
                <li class="collection-item">
                    <a href="{{ path('gestionDemandes.choix', {choix: false, id: demande.id}) }}" class="waves-effect waves-light btn-large red">Refuser la demande</a>
                    <a href="{{ path('gestionDemandes.choix', {choix: true, id: demande.id}) }}" class="waves-effect waves-light btn-large green">Accepter la demande</a>
                </li>
            </ul>
        </div>
    </div>
{% endblock %}